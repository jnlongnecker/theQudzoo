{
    "lwc": { "modules": [{ "dir": "$rootDir/src/modules" }] },
    "bundleConfig": { "exclude": ["lwc"] },
    "routes": [
        {
            "id": "example",
            "path": "/example",
            "rootComponent": "c/app"
        },
        {
            "id": "Home",
            "path": "/",
            "contentTemplate": "$contentDir/home.md",
            "layoutTemplate": "$layoutsDir/main_layout.njk"
        },
        {
            "id": "Tinkering",
            "path": "/advice/tinkering",
            "contentTemplate": "$contentDir/tinkering.md",
            "layoutTemplate": "$layoutsDir/advice_layout.njk"
        },
        {
            "id": "Breakdown",
            "path": "/advice/breakdown",
            "contentTemplate": "$contentDir/breakdown.md",
            "layoutTemplate": "$layoutsDir/advice_layout.njk"
        },
        {
            "id": "Mutations",
            "path": "/advice/mutations",
            "contentTemplate": "$contentDir/mutations.md",
            "layoutTemplate": "$layoutsDir/advice_layout.njk"
        }
    ]
}
